loadstring(game:HttpGet(("https://raw.githubusercontent.com/daucobonhi/Ui-Redz-V2/refs/heads/main/UiREDzV2.lua")))()

local Window = MakeWindow({
    Hub = {
        Title = "Bear Hud(Premium) by Quang Huy",
        Animation = "Bản Premium"
    },
    Key = {
        KeySystem = false,
        Title = "Huy Tổng Hợp",
        Description = "Dùng Script Vui Vẻ",
        KeyLink = "https://link4m.com/kjzVaRAh",
        Keys = {""},
        Notifi = {
            Notifications = true,
            CorrectKey = "Hello fen",
            Incorrectkey = "Bản premium có key đâu mà nhập key",
        }
    }
})

-- Tạo nút thu nhỏ có viền
local MinButton = MinimizeButton({
    Image = "http://www.roblox.com/asset/?id=134852113716171",
    Size = {25, 25},
    Color = Color3.fromRGB(255,255,255),
    Corner = true,
    Stroke = true,
    StrokeColor = Color3.fromRGB(255, 0, 0)
})

--- PHẦN THÊM HIỆU ỨNG NHÁY ĐA MÀU (RAINBOW) ---
task.spawn(function()
    local speed = 2 -- Tốc độ đổi màu (số càng cao nháy càng nhanh)
    
    while task.wait() do
        -- Tính toán màu sắc dựa trên thời gian thực
        local hue = (tick() * speed) % 1 
        local rainbowColor = Color3.fromHSV(hue, 1, 1) -- Tạo màu cầu vồng cực đẹp
        
        -- 1. Nháy màu cho viền của Nút Thu Nhỏ (Minimize Button)
        pcall(function()
            -- Tìm UIStroke bên trong nút thu nhỏ
            for _, v in pairs(game:GetService("CoreGui"):GetDescendants()) do
                if v:IsA("UIStroke") and v.Parent.Name == "MinimizeButton" then
                    v.Color = rainbowColor
                end
            end
        end)
        
        -- 2. Nháy màu cho viền của các Nút Bật Tắt (Toggle) trong Menu
        -- Nếu bạn muốn mọi cái viền (Stroke) trong Menu đều nháy màu:
        pcall(function()
            for _, child in pairs(game:GetService("CoreGui"):GetDescendants()) do
                if child:IsA("UIStroke") then
                    child.Color = rainbowColor
                end
            end
        end)
    end
end)

--- Ví dụ thêm 1 cái Toggle để bạn thấy nó nháy viền ---
Window:AddToggle({
    Name = "Bật Nháy Viền Test",
    Default = false,
    Callback = function(t)
        print("Trạng thái:", t)
    end
})
