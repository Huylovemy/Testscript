        Notifi = {
            Notifications = true,
            CorrectKey = "Hello fen",
            Incorrectkey = "Bản premium có key đâu mà nhập key",
        }
    }
})

MinimizeButton({
    Image = "http://www.roblox.com/asset/?id=134852113716171",
    Size = {25, 25},
    Color = Color3.fromRGB(255,255,255),
    Corner = true,
    Stroke = true, -- Bật viền cho nút thu nhỏ
    StrokeColor = Color3.fromRGB(255, 0, 0)
})

--- Thêm Nút Bật Tắt (Toggle) có viền nháy màu ---
local MyToggle = Window:AddToggle({
    Name = "Tự Động Đánh (Ví dụ)",
    Default = false,
    Callback = function(Value)
        print("Trạng thái:", Value)
    end
})

-- Đoạn Code tạo hiệu ứng nháy màu (Rainbow) cho viền --
task.spawn(function()
    while task.wait() do
        -- Tạo màu thay đổi theo thời gian (màu cầu vồng)
        local hue = tick() % 5 / 5
        local color = Color3.fromHSV(hue, 1, 1)
        
        -- Áp dụng màu này vào viền của các thành phần UI
        -- Lưu ý: Tùy vào cấu trúc thư viện, bạn có thể cần chỉnh đúng tên Object
        pcall(function()
            -- Nháy màu cho nút Minimize
            if game:GetService("CoreGui"):FindFirstChild("RobloxGui") then -- Kiểm tra vị trí UI
                 -- Thư viện Redz thường tạo UI trong CoreGui hoặc PlayerGui
            end
            
            -- Cách chung nhất cho các thư viện Redz:
            -- Nếu thư viện hỗ trợ chỉnh Stroke trực tiếp:
            -- MyToggle:SetStrokeColor(color) 
        end)
    end
end)
