import tkinter as tk
from tkinter import messagebox

def validate_key():
    entered_key = entry.get().strip()
    # Ví dụ kiểm tra key đơn giản
    if entered_key == "GEMINI-2026-OK":
        messagebox.showinfo("Thành công", "Kích hoạt script thành công!")
        root.destroy() # Đóng cửa sổ nhập key để vào script chính
    else:
        messagebox.showerror("Thất bại", "Key không chính xác. Vui lòng thử lại!")

root = tk.Tk()
root.title("Xác thực người dùng")
root.geometry("300x150")

# Căn giữa màn hình
label = tk.Label(root, text="Vui lòng nhập Key để sử dụng:", pady=10)
label.pack()

entry = tk.Entry(root, width=25, justify='center')
entry.pack(pady=5)

btn = tk.Button(root, text="Xác nhận", command=validate_key, bg="#4CAF50", fg="white")
btn.pack(pady=10)

root.mainloop()
