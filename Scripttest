<body>
    <div class="card">
        <h2>Nhập License Key</h2>
        <input type="text" id="keyInput" placeholder="XXXX-XXXX-XXXX-XXXX" maxlength="19">
        <button onclick="checkKey()">KÍCH HOẠT</button>
        <div id="message"></div>
    </div>

    <script>
        function checkKey() {
            const key = document.getElementById('keyInput').value;
            const msg = document.getElementById('message');
            // Logic kiểm tra key giả định
            if (key.length >= 10) {
                msg.innerHTML = "✅ Key hợp lệ! Đang mở script...";
                msg.style.color = "green";
            } else {
                msg.innerHTML = "❌ Key không đúng hoặc quá ngắn.";
                msg.style.color = "red";
            }
        }
    </script>
